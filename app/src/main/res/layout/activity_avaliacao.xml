<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AvaliacaoActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fundo_cadastro" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="109dp"
        android:layout_height="43dp"
        android:text="Foto 1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/bt_foto1"
        app:layout_constraintEnd_toEndOf="@+id/bt_foto1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bt_foto1"
        app:layout_constraintTop_toTopOf="@+id/bt_foto1"
        app:layout_constraintVertical_bias="0.65" />

    <ImageView
        android:id="@+id/bt_foto3"
        android:layout_width="111dp"
        android:layout_height="103dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background" />

    <Button
        android:id="@+id/tv_enviar"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="48dp"
        android:text="@string/enviar"
        android:background="@drawable/custom_button1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ti_descricao"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_mensagem"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:text="Sobre seu Plantio"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bt_foto1"
        android:layout_width="111dp"
        android:layout_height="103dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toStartOf="@+id/bt_foto2"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background" />

    <ImageView
        android:id="@+id/bt_foto2"
        android:layout_width="111dp"
        android:layout_height="103dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background" />

    <TextView
        android:id="@+id/tw_foto1"
        android:layout_width="109dp"
        android:layout_height="43dp"
        android:text="Foto 1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/bt_foto1"
        app:layout_constraintEnd_toEndOf="@+id/bt_foto1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_foto1"
        app:layout_constraintTop_toTopOf="@+id/bt_foto1"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/tw_foto2"
        android:layout_width="111dp"
        android:layout_height="44dp"
        android:text="Foto 2"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/bt_foto2"
        app:layout_constraintEnd_toEndOf="@+id/bt_foto2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_foto2"
        app:layout_constraintTop_toTopOf="@+id/bt_foto2"
        app:layout_constraintVertical_bias="0.672" />

    <TextView
        android:id="@+id/tw_foto3"
        android:layout_width="82dp"
        android:layout_height="46dp"
        android:text="Foto 3"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/bt_foto3"
        app:layout_constraintEnd_toEndOf="@+id/bt_foto3"
        app:layout_constraintStart_toStartOf="@+id/bt_foto3"
        app:layout_constraintTop_toTopOf="@+id/bt_foto3"
        app:layout_constraintVertical_bias="0.7" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ti_descricao"
        android:layout_width="351dp"
        android:layout_height="305dp"
        android:background="@drawable/custom_button2"
        android:hint="Descreva sua experiÃªncia"
        android:lines="10"
        android:maxLines="15"
        android:minLines="8"
        android:scrollbars="vertical"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button.BaseButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.612" />


</androidx.constraintlayout.widget.ConstraintLayout>